<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.drawui.MainActivity"
    tools:showIn="@layout/activity_main">


    <LinearLayout
        android:padding="@dimen/pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/pad">

            <EditText
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"/>


    <LinearLayout
        android:padding="@dimen/pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="@dimen/cross_line"
            android:layout_height="wrap_content"
            android:text="@string/overView"
            android:textColor="@color/RED"
            android:textStyle="bold" />
        <LinearLayout
            android:padding="@dimen/pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Breed" />
            <EditText
                android:id="@+id/txtAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Age" />
            <CheckBox
                android:id="@+id/chkAdopter"
                android:text="Adopter"
                android:checked="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad">

        <TextView
            android:layout_gravity="center"
            android:layout_width="@dimen/cross_line"
            android:layout_height="wrap_content"
            android:text="@string/info"
            android:textColor="@color/RED"
            android:textStyle="bold" />

        <LinearLayout
            android:padding="@dimen/pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Spinner
                android:padding="@dimen/pad"
                android:id="@+id/spinGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="@dimen/pad" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"/>

    <LinearLayout
        android:padding="@dimen/pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="@dimen/cross_line"
            android:layout_height="wrap_content"
            android:text="Measurement"
            android:textColor="@color/RED"
            android:textStyle="bold" />
        <LinearLayout
            android:padding="@dimen/pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Weight" />
            <EditText
                android:id="@+id/txtHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Height" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:background="@color/colorLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad">

        <TextView
            android:layout_width="@dimen/cross_line"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Health Notes"
            android:textColor="@color/RED"
            android:textStyle="bold" />

        <LinearLayout
            android:padding="@dimen/pad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:padding="@dimen/pad"
                android:id="@+id/txtHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:hint="Health Notes" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>